<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_inversePrimary"
    tools:context=".StoreActivity">

    <!-- Barra superior convertida en ConstraintLayout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewTop"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:background="@color/md_theme_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- FILTROS dentro de la barra, alineados abajo -->
        <LinearLayout
            android:id="@+id/filterContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Filtrar por nombre (sigue siendo EditText + OK normal) -->
            <EditText
                android:id="@+id/etFilterName"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:hint="Filtrar nombre…"
                android:padding="8dp"/>

            <Button
                android:id="@+id/btnApplyNameFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="OK"/>

            <!-- Filtrar por marca convertido en MaterialButton outlined -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBrandFilter"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Marca"
                android:textColor="@android:color/black"
                app:backgroundTint="@android:color/white"
                app:strokeColor="@android:color/black"
                app:strokeWidth="2dp"
                app:iconTint="@android:color/black"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="24dp"/>

            <!-- Filtrar por fecha convertido en MaterialButton outlined -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDateFilter"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Fecha"
                android:textColor="@android:color/black"
                app:backgroundTint="@android:color/white"
                app:strokeColor="@android:color/black"
                app:strokeWidth="2dp"
                app:iconTint="@android:color/black"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="24dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSizeFilter"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Tamaño"
                android:textColor="@android:color/black"
                app:backgroundTint="@android:color/white"
                app:strokeColor="@android:color/black"
                app:strokeWidth="2dp"
                app:iconTint="@android:color/black"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="24dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Tabla desplazable verticalmente -->
    <ScrollView
        android:id="@+id/scrollTable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/viewTop"
        app:layout_constraintBottom_toTopOf="@id/viewBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TableLayout
            android:id="@+id/tableLayoutAlmacen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <!-- Cabecera con Cantidad antes de Producto -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EEEEEE">
                <TextView
                    android:padding="8dp"
                    android:text="Cantidad"
                    android:textStyle="bold"/>
                <TextView
                    android:padding="8dp"
                    android:text="Producto"
                    android:textStyle="bold"/>
                <TextView
                    android:padding="8dp"
                    android:text="Marca"
                    android:textStyle="bold"/>
                <TextView
                    android:padding="8dp"
                    android:text="Tamaño"
                    android:textStyle="bold"/>
                <TextView
                    android:padding="8dp"
                    android:text="Fecha Caducidad"
                    android:textStyle="bold"/>
            </TableRow>
        </TableLayout>
    </ScrollView>

    <!-- Barra inferior -->
    <View
        android:id="@+id/viewBottom"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@color/md_theme_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón 'Volver' al pie -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonVolver"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="227dp"
        android:layout_height="86dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="4dp"
        android:text="Volver"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:backgroundTint="@android:color/white"
        app:icon="@drawable/ic_volver"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconSize="30dp"
        app:iconTint="@android:color/black"
        app:strokeColor="@android:color/black"
        app:strokeWidth="2dp"
        app:layout_constraintBottom_toBottomOf="@id/viewBottom"
        app:layout_constraintStart_toStartOf="@id/viewBottom"/>
</androidx.constraintlayout.widget.ConstraintLayout>
